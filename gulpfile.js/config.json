{
  "root": {
    "src": "./src",
    "dest": "./dist"
  },

  "tasks": {
    "nodemon": {
      "server": "server.js"
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "server": {
      "src": "",
      "dest": "./",
      "config": "./tsconfig.server.json",
      "exclude": [
        "**/*.spec.ts",
        "js/**/*"
      ],
      "extensions": ["ts"]
    },

    "javascripts": {
      "src": "js",
      "dest": "js",
      "config": "tsconfig.client.json",
      "entries": {
        "vendor": ["./vendor.ts"],
        "main": ["./main.ts"],
        "app": ["./app.ts"]
      },
      "extensions": ["ts", "js", "json"],
      "extractSharedJs": false
    },

    "stylesheets": {
      "src": "styles",
      "dest": "styles",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": [
          "./node_modules/normalize.css"
        ]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "views",
      "dest": "views",
      "templateEngine": "pug",
      "extensions": ["pug", "html", "json"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "images",
      "extensions": ["svg"]
    },

    "production" : {
      "rev": true
    }
  }
}
