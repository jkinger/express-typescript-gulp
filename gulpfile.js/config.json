{
  "root": {
    "src": "./src",
    "dest": "./dist"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "dist"
      }
    },

    "nodemon": {
      "server": "server.js"
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "angular": {
      "src": "app",
      "dest": "js",
      "entries": {
        "polyfills": ["./polyfills.browser.ts"],
        "app": ["./main.ts"]
      },
      "extensions": ["ts", "js", "json"]
    },

    "server": {
      "src": "",
      "dest": "./",
      "exclude": [
        "**/*.spec.ts",
        "app/**/*"
      ],
      "compilerOptions": {
        "noImplicitAny": false
      },
      "extensions": ["ts"]
    },

    "js": {
      "src": "js",
      "dest": "js",
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "extractSharedJs": false
    },

    "css": {
      "src": "styles",
      "dest": "styles",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": [
          "./node_modules/normalize.css"
        ]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "views",
      "dest": "views",
      "templateEngine": "pug",
      "extensions": ["pug", "html", "json"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "icons",
      "dest": "images",
      "extensions": ["svg"]
    },

    "production" : {
      "rev": true
    }
  }
}
